{
  "compilerOptions": {
    "lib": [ "es2017" ],
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": false,
    "allowUnreachableCode": false,
    "noImplicitReturns": true,
    "preserveConstEnums": true,
    "resolveJsonModule": true,
    "declaration": true,
    "strict": true,
    "outDir": "./dist/",
    "target": "es2017",
    "sourceMap": true
  },
  "include": [
    "**/*.d.ts",
    "index.ts",
    "src/**/*",
    "test/**/*",
    "src/i18n/*.json"
  ],
  "exclude": [
    "dist/**/*",
    "node_modules/**/*",
    "**/*.spec.ts"
  ]
}
